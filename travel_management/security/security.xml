<odoo>
    <data noupdate="1">
        <!-- Catégorie de groupe pour Travel -->
        <record id="group_travel_category" model="ir.module.category">
            <field name="name">Travel</field>
            <field name="description">Gestion des voyages et réservations</field>
            <field name="sequence">30</field>
        </record>

        <!-- Groupe Agent -->
        <record id="group_travel_agent" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="group_travel_category"/>
        </record>

        <!-- Groupe Caissier -->
        <record id="group_travel_caissier" model="res.groups">
            <field name="name">Caissier</field>
            <field name="category_id" ref="group_travel_category"/>
        </record>
    </data>
</odoo>
