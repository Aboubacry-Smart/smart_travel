<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="travel_booking_template" name="Reservation">
        <t t-call="website.layout">
            
            <!-- Style minimaliste amélioré -->
            <style>
                /* Variables CSS pour la cohérence */
                :root {
                    --primary-color: #714B67;
                    --primary-light: #8b6580;
                    --primary-dark: #5a3c52;
                    --gray-50: #f9fafb;
                    --gray-100: #f3f4f6;
                    --gray-200: #e5e7eb;
                    --gray-300: #d1d5db;
                    --gray-600: #4b5563;
                    --gray-900: #111827;
                    --white: #ffffff;
                    --radius: 12px;
                    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
                    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
                }

                /* Reset et base */
                * {
                    box-sizing: border-box;
                }

                body {
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
                    line-height: 1.6;
                    color: var(--gray-900);
                }

                /* Container principal */
                .travel-booking-container {
                    max-width: 900px;
                    margin: 40px auto;
                    padding: 0;
                    background: var(--white);
                    border-radius: var(--radius);
                    box-shadow: var(--shadow-lg);
                    overflow: hidden;
                }

                /* Header section */
                .travel-header {
                    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
                    padding: 40px 30px;
                    text-align: center;
                    color: var(--white);
                }

                .travel-header h1 {
                    margin: 0 0 8px 0;
                    font-size: 28px;
                    font-weight: 600;
                    letter-spacing: -0.02em;
                }

                .travel-header p {
                    margin: 0;
                    opacity: 0.9;
                    font-size: 16px;
                }

                /* Form section */
                .travel-form-section {
                    padding: 40px 30px;
                }

                .travel-form-grid {
                    display: grid;
                    grid-template-columns: 1fr 1fr auto;
                    gap: 20px;
                    align-items: end;
                }

                /* Input groups */
                .travel-input-group {
                    display: flex;
                    flex-direction: column;
                }

                .travel-input-group label {
                    font-size: 14px;
                    font-weight: 500;
                    color: var(--gray-600);
                    margin-bottom: 8px;
                    text-transform: uppercase;
                    letter-spacing: 0.05em;
                }

                .travel-input-group select {
                    width: 100%;
                    padding: 16px 18px;
                    border: 2px solid var(--gray-200);
                    border-radius: var(--radius);
                    font-size: 16px;
                    background-color: var(--white);
                    color: var(--gray-900);
                    appearance: none;
                    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23374151' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
                    background-repeat: no-repeat;
                    background-position: right 16px center;
                    background-size: 18px;
                    transition: all 0.2s ease;
                    cursor: pointer;
                }

                .travel-input-group select:hover {
                    border-color: var(--gray-300);
                }

                .travel-input-group select:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 3px rgba(113, 75, 103, 0.1);
                }

                /* Search button */
                .travel-search-btn {
                    padding: 16px 24px;
                    background: var(--primary-color);
                    color: var(--white);
                    border: none;
                    border-radius: var(--radius);
                    font-size: 16px;
                    font-weight: 500;
                    cursor: pointer;
                    transition: all 0.2s ease;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    min-width: 120px;
                    height: 58px;
                }

                .travel-search-btn:hover {
                    background: var(--primary-dark);
                    transform: translateY(-1px);
                    box-shadow: var(--shadow-md);
                }

                .travel-search-btn:active {
                    transform: translateY(0);
                }

                .travel-search-btn i {
                    font-size: 18px;
                }

                /* Alerts */
                .travel-alert {
                    margin: 30px;
                    padding: 16px 20px;
                    border-radius: var(--radius);
                    font-size: 14px;
                    border-left: 4px solid;
                }

                .travel-alert-warning {
                    background: #fef3c7;
                    border-left-color: #f59e0b;
                    color: #92400e;
                }

                .travel-alert-danger {
                    background: #fee2e2;
                    border-left-color: #ef4444;
                    color: #dc2626;
                }

                .travel-alert-info {
                    background: #dbeafe;
                    border-left-color: #3b82f6;
                    color: #1d4ed8;
                }

                /* Results section */
                .travel-results-section {
                    margin-top: 30px;
                    background: var(--gray-50);
                    border-radius: var(--radius);
                    overflow: hidden;
                }

                .travel-results-header {
                    background: var(--white);
                    padding: 24px 30px;
                    border-bottom: 1px solid var(--gray-200);
                }

                .travel-results-header h4 {
                    margin: 0;
                    font-size: 20px;
                    font-weight: 600;
                    color: var(--primary-color);
                }

                .travel-results-content {
                    padding: 30px;
                    background: var(--white);
                }

                .travel-results-grid {
                    display: grid;
                    grid-template-columns: 1fr 1fr;
                    gap: 30px;
                    margin-bottom: 30px;
                }

                .travel-info-item {
                    display: flex;
                    flex-direction: column;
                    gap: 4px;
                }

                .travel-info-label {
                    font-size: 12px;
                    font-weight: 500;
                    color: var(--gray-600);
                    text-transform: uppercase;
                    letter-spacing: 0.05em;
                }

                .travel-info-value {
                    font-size: 16px;
                    font-weight: 500;
                    color: var(--gray-900);
                }

                /* Book button */
                .travel-book-btn {
                    width: 100%;
                    padding: 16px 24px;
                    background: var(--primary-color);
                    color: var(--white);
                    border: none;
                    border-radius: var(--radius);
                    font-size: 16px;
                    font-weight: 500;
                    cursor: pointer;
                    transition: all 0.2s ease;
                }

                .travel-book-btn:hover {
                    background: var(--primary-dark);
                    transform: translateY(-1px);
                    box-shadow: var(--shadow-md);
                }

                /* Responsive Design */
                @media (max-width: 768px) {
                    .travel-booking-container {
                        margin: 20px;
                        border-radius: var(--radius);
                    }

                    .travel-header {
                        padding: 30px 20px;
                    }

                    .travel-form-section {
                        padding: 30px 20px;
                    }

                    .travel-form-grid {
                        grid-template-columns: 1fr;
                        gap: 20px;
                    }

                    .travel-search-btn {
                        width: 100%;
                    }

                    .travel-results-grid {
                        grid-template-columns: 1fr;
                        gap: 20px;
                    }

                    .travel-alert {
                        margin: 20px;
                    }
                }

                @media (max-width: 480px) {
                    .travel-booking-container {
                        margin: 15px;
                    }

                    .travel-header {
                        padding: 25px 15px;
                    }

                    .travel-header h1 {
                        font-size: 24px;
                    }

                    .travel-form-section {
                        padding: 25px 15px;
                    }

                    .travel-results-content {
                        padding: 20px 15px;
                    }
                }

                /* Animations */
                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(30px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                .travel-booking-container {
                    animation: fadeInUp 0.6s ease-out;
                }
            </style>
            
            <!-- Contenu principal -->
            <div class="container-fluid">
                <div class="travel-booking-container">
                    <!-- Header -->
                    <div class="travel-header">
                        <h1>Rechercher un voyage</h1>
                        <p>Trouvez le trajet parfait pour votre destination</p>
                    </div> 

                    <!-- Form Section -->
                    <div class="travel-form-section">
                        <form method="get" action="/my/travel/search">
                            <div class="travel-form-grid">
                                <!-- Point de départ -->
                                <div class="travel-input-group">
                                    <label for="depart">Départ</label>
                                    <select name="departure_point" id="depart" required="required">
                                        <option value="" selected="true" disabled="true">Choisir un point de départ</option>
                                        <t t-foreach="travel_points" t-as="point">
                                            <option t-att-value="point.id" t-att-selected="point.id == departure_selected">
                                                <t t-esc="point.name"/>
                                                <t t-if="point.code"> (<t t-esc="point.code"/>)</t>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                
                                <!-- Point d'arrivée -->
                                <div class="travel-input-group">
                                    <label for="arrivee">Arrivée</label>
                                    <select name="arrival_point" id="arrivee" required="required">
                                        <option value="" selected="true" disabled="true">Choisir une destination</option>
                                        <t t-foreach="travel_points" t-as="point">
                                            <option t-att-value="point.id" t-att-selected="point.id == arrival_selected">
                                                <t t-esc="point.name"/>
                                                <t t-if="point.code"> (<t t-esc="point.code"/>)</t>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                
                                <!-- Bouton Rechercher -->
                                <button type="submit" class="travel-search-btn">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Messages d'alerte -->
                <div t-if="request.params.get('error') == 'missing_points'" class="travel-alert travel-alert-warning">
                    Veuillez sélectionner un point de départ et un point d'arrivée.
                </div>
                
                <div t-if="request.params.get('error') == 'same_points'" class="travel-alert travel-alert-warning">
                    Le point de départ et le point d'arrivée doivent être différents.
                </div>
                
                <div t-if="request.params.get('error') == 'invalid_points'" class="travel-alert travel-alert-danger">
                    Les points sélectionnés sont invalides.
                </div>
                
                <!-- Message si aucune route trouvée -->
                <div t-if="route_not_found" class="travel-alert travel-alert-info">
                    <strong>Aucune route disponible</strong><br/>
                    Aucun trajet n'a été trouvé entre <t t-esc="departure_name"/> et <t t-esc="arrival_name"/>.
                </div>
                
                <!-- Résultats de la recherche -->
                <div t-if="route_found" class="travel-booking-container">
                    <div class="travel-results-section">
                        <div class="travel-results-header">
                            <h4>Trajet disponible</h4>
                        </div>
                        <div class="travel-results-content">
                            <div class="container">
                                <!-- Ligne 1 : Select -->
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label for="route_line_select" class="form-label fw-bold">Heure de départ : Heure d'arrivée (Estimée) </label>
                                        <select id="route_line_select" class="form-select">
                                            <t t-foreach="route_found.route_line_ids" t-as="l">
                                                <option t-att-value="l.id">
                                                    <t t-esc="'%02d:%02d' % (int(l.hour_start), int((l.hour_start % 1) * 60))"/> -
                                                    <t t-esc="'%02d:%02d' % (int(l.hour_end), int((l.hour_end % 1) * 60))"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>

                                <!-- Ligne 2 : Infos -->
                                <div class="row text-center">
                                    <div class="col-md-4 col-12 mb-2">
                                        <div class="p-2 border rounded shadow-sm">
                                            <span class="d-block fw-bold">Départ</span>
                                            <span><t t-esc="route_found.departure_point.name"/></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12 mb-2">
                                        <div class="p-2 border rounded shadow-sm">
                                            <span class="d-block fw-bold">Arrivée</span>
                                            <span><t t-esc="route_found.arrival_point.name"/></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-12 mb-2">
                                        <div class="p-2 border rounded shadow-sm">
                                            <span class="d-block fw-bold">Prix</span>
                                            <span><t t-esc="route_found.price"/> <t t-esc="route_found.currency"/></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Ligne 3 : Bouton -->
                                <div class="row mt-3">
                                    <div class="col-12 text-center">
                                        <button class="btn btn-primary travel-book-btn"
                                                t-att-onclick="'redirect_to_booking_place(' + str(route_found.id) + ', ' + str(route_found.price) + ', \'' + str(route_found.currency) + '\')'">
                                            Réserver ce trajet
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- JavaScript -->
            <script><![CDATA[
                function redirect_to_booking_place(route_id, price, currency) {
                    var routeLineSelect = document.getElementById('route_line_select');
                    var route_line_id = routeLineSelect ? routeLineSelect.value : '';
                    const params = new URLSearchParams({
                        route_id: route_id,
                        price: price,
                        currency: currency,
                        route_line_id: route_line_id,
                    });
                    const url = '/my/travel/place?' + params.toString();
                    window.location.href = url;
                }

                // Amélioration UX: Auto-focus sur le premier select
                document.addEventListener('DOMContentLoaded', function() {
                    const firstSelect = document.getElementById('depart');
                    if (firstSelect && !firstSelect.value) {
                        firstSelect.focus();
                    }
                });
            ]]></script>
        </t>
    </template>
</odoo>