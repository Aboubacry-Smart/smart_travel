<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="travel_route_line_form_view" model="ir.ui.view">
            <field name="name">travel.route.line.form.view</field>
            <field name="model">travel.route.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_orders"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-ticket">
                                <field string="RÃ©servations" name="order_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="route_id"/>
                                <field name="duration"/>
                            </group>
                            <group>
                                <field name="hour_start"/>
                                <field name="hour_end"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="travel_route_line_list_view" model="ir.ui.view">
            <field name="name">travel.route.line.list.view</field>
            <field name="model">travel.route.line</field>
            <field name="arch" type="xml">
                <list>
                    <field name="route_id"/>
                    <field name="hour_start"/>
                    <field name="hour_end"/>
                    <field name="duration"/>
                </list>
            </field>
        </record>

        <record id="travel_route_line_action" model="ir.actions.act_window">
            <field name="name">Route Lines</field>
            <field name="res_model">travel.route.line</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
