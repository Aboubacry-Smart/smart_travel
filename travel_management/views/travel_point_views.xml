<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Travel Point list View -->
        <record id="travel_point_list_view" model="ir.ui.view">
            <field name="name">travel.point.list</field>
            <field name="model">travel.point</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <!-- Travel Point Form View -->
        <record id="travel_point_form_view" model="ir.ui.view">
            <field name="name">travel.point.form</field>
            <field name="model">travel.point</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Travel Point Action -->
        <record id="travel_point_action" model="ir.actions.act_window">
            <field name="name">Travel Points</field>
            <field name="res_model">travel.point</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first travel point!
                </p>
                <p>
                    Travel points represent locations like bus stations, airports, or any pickup/drop-off locations.
                </p>
            </field>
        </record>

    </data>
</odoo>
